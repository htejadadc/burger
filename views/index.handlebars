<h1>Eat-Da-Burger!</h1>

<div class="container">
  <ol>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          <div class="burger-name">
            {{this.burger_name}}
          </div>

          <form class="burger-devour" action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Devour it!</button>
          </form>
        
        </li>
      {{/unless}}
    {{/each}}
  </ol>

  <ol>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">         
          </form>
         
        </li>
      {{/if}}
    {{/each}}
  </ol>
</div>

<form class="create-burger-form" action="/" method="POST">

  <div class="form-group">
    <label for="new-burger"></label>
    <input type="text" id="new-burger" name="name">
  </div>
  <br>
  <button type="submit">Submit</button>  
  <p>Enter a burger you want to eat Click the "Submit" button</p>
</form>





